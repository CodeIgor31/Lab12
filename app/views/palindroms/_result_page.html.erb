<% if @palindrom.valid? %>
    <h3>Таблица с результатами</h3>
    Введенное диапазон: [0, <%= @number[:num] %>]
    <table class = "tab">
        <tr>
        <th>Число</th>
        <th>Квадрат числа</th>
        </tr>
        <% @hash.each do |res, sqr|%>
        <tr>
            <td><%= res %></td>
            <td><%= sqr %></td>
        </tr>
        <% end%>
    </table>
    Количество таких чисел
    <p id="counter"><%= @hash.size %></p>
<% else %>
    <ul>
    <% @palindrom.errors.each do |error| %>
      <p><div class='alert alert-info'><%= error.full_message %></div></p>
    <% end %>
  </ul>
<% end %>