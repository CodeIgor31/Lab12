<h4>Регистрация</h4>
<%= form_with model: @user do |form| %>
  <p><%= form.label :email, "Введите email" %></p>
  <p><%= form.email_field :email, placeholder: 'E-mail', class: 'form-control' %></p>
  <p><%= form.label :login, "Введите логин" %></p>
  <p><%= form.text_field :login, placeholder: 'login', class: 'form-control' %></p>
  <p><%= form.label :password, "Введите пароль" %></p>
  <p><%= form.password_field :password, class: 'form-control' %></p>
  <p><%= form.label :password_confirmation, "Повторите пароль" %></p>
  <p><%= form.password_field :password_confirmation, class: 'form-control' %></p>
  <p><%= form.submit "Зарегистрироваться" %></p>
<% end %>
